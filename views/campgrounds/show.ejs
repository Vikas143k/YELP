<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 ">
        <div class="card mb-3">
            <img src="<%=campground.image%>" class="card-img-top" style="height: 20em;">
            <div class="card-body">
              <h4 class="card-title"><%= campground.title %></h4>
              <p class="card-text"><%=campground.description  %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%=campground.location%></li>
              <li class="list-group-item">Owned by <%=campground.owner.username%></li>
              <li class="list-group-item">â‚¹<%=campground.price%>/night</li>
            </ul>
            <% if(currentUser && campground.owner.equals(currentUser)){ %>
              <div class="card-body">
                <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-primary card-link">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=delete" method="post">
                  <button class="btn btn-danger card-link">Delete</button>
                  </form>
              </div>
            <% } %>
          
            <div class="card-footer text-body-secondary">
                2 days ago
              </div>
          </div>
          
    </div>
    <div class="col-6">
      <% if(currentUser){ %>
      <h2>Leave a Review</h2>
      <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" novalidate class="mb-3 validate-form"  >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" name="review[rating]" class="form-range" min="1" max="5" id="rating">
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review:</label>
          <textarea  class="form-control" name="review[body]" id="body" rows="3" cols="30" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <% } %>
      <% for(let review of campground.reviews){ %>
        <div class="card mb-3">
          <div class="card-body" >
              <h5 class="card-title">Rating: <%=review.rating%></h5>
              <h5 class="card-subtitle-mb2 text-muted">By <%=review.author.username%></h5>
              <p class="card-text">Review:<%=review.body%></p>
            <% if(currentUser && review.author.equals(currentUser)){ %>
              <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
          <% } %>
      
    </div>
    </div>
    




