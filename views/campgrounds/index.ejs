<% layout('layouts/boilerplate') %>
    <h1>Campgrounds</h1>
    <div class="mb-1">
        <a href="/campgrounds/new">New Campground</a>
    </div>
        <% for (let camp of campground){ %>
            <div class="card mb-3 ">
                <div class="row ">
                  <div class="col-md-2">
                    <img src="<%=camp.image%>" class="img-fluid rounded-start" >
                  </div>
                  <div class="col-md-10">
                        <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <div class="card-text"><%= camp.description %></div>
                        <p class="card-text"><small class="text-body-secondary"><%= camp.location %></small></p>
                        <a class="btn btn-primary" href="campgrounds/<%=camp.id%>">Go to <%=camp.title%></a>
                        </div>
                </div>
                </div>
              </div>
            <% } %>
