<% layout('layouts/boilerplate') %>
 <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Edit Campground</h1><br>
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post" novalidate class="validate-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input type="text" class="form-control" required value="<%=camp.title%>" name="campground[title]" id="title">
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input type="text" class="form-control" value="<%=camp.location%>" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url:</label>
                    <input type="text" class="form-control" value="<%=camp.image%>" name="campground[image]" id="image" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea type="text" class="form-control" name="campground[description]" id="description" required><%=camp.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price:</label>
                    <div class="input-group">
                        <span class="input-group-text">â‚¹</span>
                        <input type="text" class="form-control" value="<%=camp.price%>" name="campground[price]" id="price" aria-label="price (to the nearest rupee)" required>
                        <span class="input-group-text">.00</span>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                </div>


                <div class="mb-3">
                <button type="submit" class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%=camp._id%>">Go back</a><br>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div> 